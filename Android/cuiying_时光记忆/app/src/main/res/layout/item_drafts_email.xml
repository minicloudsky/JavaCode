<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="10dp"
    android:background="#efefef"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlTimeline"
        android:layout_width="32dp"
        android:background="#efefef"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTopLine"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tvDot"
            android:background="#999" />

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/timelline_dot_normal" />

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tvDot"
            android:layout_centerHorizontal="true"
            android:background="#999" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_email_drafts_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:elevation="5dp"
        android:background="@color/white_normal">
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/email_drafts_time"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="写于 2017年08月24号 15:35"
                android:textColor="#999"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:lines="1"
                android:ellipsize="marquee"
                android:paddingTop="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/stay_modify_drafts_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:lines="1"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="· 写给20岁的自己"
                android:textColor="#999"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/drafts_email_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/top"
            android:layout_marginLeft="5dp"
            android:maxLines="4"
            android:paddingRight="5dp"
            android:text="        最孤独的不是一个人，而是一个人找另一个人，一句话找另一句话。最孤独的不是一个人，而是一个人找另一个人，一句话找另一句话。最孤独的不是一个人，而是一个人找另一个人，一句话找另一句话。"
            android:textColor="#999"
            android:ellipsize="end"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
