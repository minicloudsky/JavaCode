<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.law.mapper.SectionMapper">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <resultMap type="com.law.pojo.Section" id="sectionResultMap">
    	<id column="id" property="id" jdbcType="BIGINT"/>
    	<result column="section_title" property="sectionTitle" jdbcType="VARCHAR"/>
    	<result column="section_content" property="sectionContent" jdbcType="VARCHAR"/>
    	<result column="study_id" property="studyId" jdbcType="BIGINT"/>
    </resultMap>
    <select id="queryByStudyId" resultMap="sectionResultMap" parameterType="_long">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            section
        WHERE
            study_id = #{studyId}
    </select>


	<insert id="insert"  parameterType="Section">
		INSERT ignore INTO section(section_title,section_content,study_id)
		VALUES(#{sectionTitle},#{sectionContent},#{studyId})
	</insert>

    <update id="update" parameterType="Section">
        UPDATE section
        SET
         section_title = #{sectionTitle},
         section_content = #{sectionContent},
         study_id = #{studyId}
        WHERE
            id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="_long">
       DELETE 
       FROM section
       WHERE id = #{id}
    </delete>
</mapper>