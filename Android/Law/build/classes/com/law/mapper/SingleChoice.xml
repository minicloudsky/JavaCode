<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.law.mapper.SingleChoiceMapper">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <resultMap type="com.law.pojo.SingleChoice" id="singlechoiceResultMap">
    	<id column="id" property="id" jdbcType="BIGINT"/>
    	<result column="topic" property="topic" jdbcType="VARCHAR"/>
    	<result column="exam_id" property="examId" jdbcType="BIGINT"/>
    </resultMap>
    <select id="queryByExamId" resultMap="singlechoiceResultMap" parameterType="_long">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            single_choice
        WHERE
            exam_id = #{examId}
    </select>

	<insert id="insert"  parameterType="SingleChoice">
		INSERT ignore INTO single_choice(topic,exam_id)
		VALUES(#{topic},#{examId})
	</insert>

    <update id="update" parameterType="SingleChoice">
        UPDATE single_choice
        SET 
         	topic = #{topic},
        	exam_id = #{examId}
        WHERE
            id = #{id}
        AND number > 0
    </update>
    
    <delete id="delete" parameterType="_long">
       DELETE 
       FROM single_choice
       WHERE id = #{id}
    </delete>
</mapper>