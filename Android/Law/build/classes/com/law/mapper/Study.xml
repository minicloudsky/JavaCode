<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.law.mapper.StudyMapper">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <resultMap type="com.law.pojo.Study" id="studyResultMap">
    	<id column="id" property="id" jdbcType="BIGINT"/>
    	<result column="study_title" property="studyTitle" jdbcType="VARCHAR"/>
    	<result column="study_classify" property="studyClassify" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="queryById" resultMap="studyResultMap" parameterType="_long">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            study
        WHERE
            id = #{id}
    </select>
       <select id="queryByClassify"  resultMap="studyResultMap" parameterType="String">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            study
        WHERE
            study_classify = #{studyClassify}
    </select>
    
	<select id="queryAll"  resultMap="studyResultMap">
        SELECT
          	*
        FROM
            study
        ORDER BY
            id
    </select>

    <select id="queryPaging" resultType="Study">
        SELECT
          	*
        FROM
            study
        ORDER BY
            id
        LIMIT #{offset}, #{limit}
    </select>

	<insert id="insertStudy"  parameterType="Study">
		INSERT ignore INTO study(study_title,study_classify)
		VALUES(#{studyTitle},#{studyClassify})
	</insert>

    <update id="updateStudy" parameterType="Study">
        UPDATE study
        SET 
        	study_title = #{studyTitle},
        	study_classify = #{studyClassify}
        WHERE
            id = #{id}
        AND number > 0
    </update>
    
    <delete id="deleteStudy" parameterType="_long">
       DELETE 
       FROM study
       WHERE id = #{id}
    </delete>
</mapper>