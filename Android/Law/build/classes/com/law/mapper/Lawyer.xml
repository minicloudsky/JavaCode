<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.law.mapper.LawyerMapper">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <resultMap type="com.law.pojo.Lawyer" id="lawyerResultMap">
    	<id column="id" property="id" jdbcType="BIGINT"/>
    	<result column="lawyer_major" property="lawyerMajor" jdbcType="VARCHAR"/>
    	<result column="lawyer_desc" property="lawyerDesc" jdbcType="VARCHAR"/>
    	<result column="card_id" property="cardId" jdbcType="VARCHAR"/>
    	<result column="user_id" property="userId" jdbcType="BIGINT"/>
    </resultMap>
    <select id="queryByUserId" resultMap="lawyerResultMap" parameterType="_long">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            lawyer
        WHERE
            user_id = #{userId}
    </select>

    <select id="queryAll" resultMap="lawyerResultMap">
        SELECT
            *
        FROM
            lawyer
    </select>

	<insert id="insert"  parameterType="Lawyer">
		INSERT ignore INTO lawyer(lawyer_major,lawyer_desc,card_id,user_id)
		VALUES(#{lawyerMajor},#{lawyerDesc},#{cardId},#{userId})
	</insert>

    <update id="update" parameterType="Lawyer">
        UPDATE lawyer
        SET 
        lawyer_major = #{lawyerMajor},
        lawyer_desc = #{lawyerDesc},
        card_id = #{cardId},
        user_id = #{userId}
        WHERE
            id = #{id}
        AND number > 0
    </update>
    
    <delete id="delete" parameterType="_long">
       DELETE 
       FROM lawyer
       WHERE id = #{id}
    </delete>
</mapper>