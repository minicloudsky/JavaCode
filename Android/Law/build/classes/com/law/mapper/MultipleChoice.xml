<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.law.mapper.MultipleChoiceMapper">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <resultMap type="com.law.pojo.MultipleChoice" id="multiplechoiceResultMap">
    	<id column="id" property="id" jdbcType="BIGINT"/>
    	<result column="exam_id" property="examId" jdbcType="BIGINT"/>
    	<result column="topic" property="topic" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="queryByExamId" resultMap="multiplechoiceResultMap" parameterType="_long">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            multiple_choice
        WHERE
            exam_id = #{examId}
    </select>

	<insert id="insert"  parameterType="MultipleChoice">
		INSERT ignore INTO multiple_choice(topic,exam_id)
		VALUES(#{topic},#{examId})
	</insert>

    <update id="update" parameterType="MultipleChoice">
        UPDATE multiple_choice
        SET 
         	topic = #{topic},
        	exam_id = #{examId}
        WHERE
            id = #{id}
        AND number > 0
    </update>
    
    <delete id="delete" parameterType="_long">
       DELETE 
       FROM multiple_choice
       WHERE id = #{id}
    </delete>
</mapper>