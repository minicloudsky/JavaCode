<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.law.mapper.TopicMapper">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <resultMap type="com.law.pojo.Topic" id="topicResultMap">
    	<id column="id" property="id" jdbcType="BIGINT"/>
    	<result column="topic_title" property="topicTitle" jdbcType="VARCHAR"/>
    	<result column="topic_content" property="topicContent" jdbcType="LONGVARCHAR"/>
    	<result column="topic_username" property="topicUserName" jdbcType="VARCHAR"/>
    	<result column="topic_time" property="topicTime" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="queryById" resultMap="topicResultMap" parameterType="_long">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            topic
        WHERE
            id = #{id}
    </select>

    <select id="queryByUserName" resultMap="topicResultMap" parameterType="String">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            topic
        WHERE
            topic_username = #{username}
    </select>
	<select id="queryAll" resultMap="topicResultMap">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
          	topic
    </select>
	<insert id="insert"  parameterType="Topic">
		INSERT ignore INTO topic(topic_title,topic_content,topic_username,topic_time)
		VALUES(#{topicTitle},#{topicContent},#{topicUserName},#{topicTime})
	</insert>

    <update id="update" parameterType="Topic">
        UPDATE topic
        SET 
        	topic_title = #{topicTitle}
         	topic_content = #{topicContent},
        	topic_username = #{topicUserName},
        	topic_time = #{topicTime}
        WHERE
            id = #{id}
        AND number > 0
    </update>
    
    <delete id="delete" parameterType="_long">
       DELETE 
       FROM topic
       WHERE id = #{id}
    </delete>
</mapper>