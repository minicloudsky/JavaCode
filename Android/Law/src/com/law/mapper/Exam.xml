<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.law.mapper.ExamMapper">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <resultMap type="com.law.pojo.Exam" id="examResultMap">
    	<id column="id" property="id" jdbcType="BIGINT"/>
    	<result column="exam_title" property="examTitle" jdbcType="VARCHAR"/>
    	<result column="exam_desc" property="examDesc" jdbcType="VARCHAR"/>
    	<result column="exam_classify" property="examClassify" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="queryAll" resultMap="examResultMap" >
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            exam
    </select>
    <select id="queryByClassify" resultMap="examResultMap"  parameterType="String">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            exam
        WHERE
        exam_classify = #{examClassify}
    </select>
    <select id="queryById" resultMap="examResultMap"  parameterType="_long">
        <!-- 具体的sql -->
        SELECT
            *
        FROM
            exam
        WHERE
            id = #{id}
    </select>
	<insert id="insert"  parameterType="Exam">
		INSERT ignore INTO exam(exam_title,exam_desc)
		VALUES(#{examTitle},#{examDesc})
	</insert>

    <update id="update" parameterType="Exam">
        UPDATE exam
        SET 
         	exam_title = #{examTitle},
        	exam_desc = #{examDesc}
        WHERE
            id = #{id}
        AND number > 0
    </update>
    
    <delete id="delete" parameterType="_long">
       DELETE 
       FROM exam
       WHERE id = #{id}
    </delete>
</mapper>